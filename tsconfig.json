{
  "compilerOptions": {
    "outDir": "./dist",
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "target": "es5",
    "sourceMap": true,
    "baseUrl": "src",
    "typeRoots": [
      "/node_modules/@types",
      "@types"
    ],
    "lib": [
      "es2015",
      "ES6",
      "dom"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}
